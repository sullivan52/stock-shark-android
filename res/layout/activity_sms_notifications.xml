<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    tools:context=".SmsNotificationsActivity">

    <!-- Top App Bar with back navigation -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background"
        android:elevation="@dimen/toolbar_elevation"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="@color/shark_blue"
        app:navigationContentDescription="@string/content_desc_back_button"
        app:title="@string/sms_notifications_title"
        app:titleTextAppearance="@style/StockSharkToolbarTitle"
        app:titleTextColor="@color/shark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content container -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_medium"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header illustration -->
            <ImageView
                android:id="@+id/ivSmsIllustration"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:contentDescription="@string/content_desc_sms_illustration"
                android:src="@drawable/shark_phone_logo"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvSmsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/sms_setup_title"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/ivSmsIllustration"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Description -->
            <TextView
                android:id="@+id/tvSmsDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/sms_setup_description"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/tvSmsTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Features card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvFeatures"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                app:cardBackgroundColor="@color/surface_variant"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/tvSmsDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sms_features_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/text_primary"
                        android:drawablePadding="@dimen/spacing_small"
                        app:drawableStartCompat="@drawable/ic_notifications_24"
                        app:drawableTint="@color/shark_blue" />

                    <!-- Feature items -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sms_feature_low_stock"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_check_circle_24"
                            app:drawableTint="@color/success" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="@string/sms_feature_instant_alerts"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_check_circle_24"
                            app:drawableTint="@color/success" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="@string/sms_feature_privacy"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/text_secondary"
                            android:drawablePadding="@dimen/spacing_small"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/ic_check_circle_24"
                            app:drawableTint="@color/success" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Phone Number Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPhoneNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:hint="@string/hint_phone_number"
                app:helperText="@string/helper_phone_format"
                app:helperTextEnabled="true"
                app:errorEnabled="true"
                app:startIconDrawable="@drawable/ic_phone_24"
                app:startIconContentDescription="@string/content_desc_phone_icon"
                app:prefixText="+1 "
                app:prefixTextColor="@color/text_secondary"
                app:layout_constraintTop_toBottomOf="@id/cvFeatures"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="15"
                    android:imeOptions="actionDone"
                    android:contentDescription="@string/content_desc_phone_field"
                    android:importantForAutofill="yes"
                    android:autofillHints="phoneNumber" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Privacy Notice -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvPrivacyNotice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                app:cardBackgroundColor="@color/info_container"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:strokeColor="@color/info"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tilPhoneNumber"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_medium"
                    android:gravity="top">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:src="@drawable/ic_privacy_tip_24"
                        android:contentDescription="@string/content_desc_privacy_icon"
                        app:tint="@color/info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sms_privacy_notice"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/on_info_container" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Send Test SMS Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSendSms"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/spacing_large"
                android:text="@string/btn_send_test_sms"
                android:textSize="@dimen/text_size_button"
                android:textAllCaps="false"
                android:backgroundTint="@color/shark_blue"
                app:cornerRadius="@dimen/button_corner_radius"
                app:icon="@drawable/ic_sms_24"
                app:iconGravity="textStart"
                app:rippleColor="@color/button_ripple"
                app:strokeColor="@color/shark_blue"
                app:strokeWidth="@dimen/button_stroke_width"
                app:layout_constraintTop_toBottomOf="@id/cvPrivacyNotice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_max="@dimen/button_max_width" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/loading_indicator_size"
                android:layout_height="@dimen/loading_indicator_size"
                android:visibility="gone"
                android:indeterminateTint="@color/shark_blue"
                app:layout_constraintTop_toTopOf="@id/btnSendSms"
                app:layout_constraintBottom_toBottomOf="@id/btnSendSms"
                app:layout_constraintStart_toStartOf="@id/btnSendSms"
                app:layout_constraintEnd_toEndOf="@id/btnSendSms"
                tools:visibility="visible" />

            <!-- Skip Option for Future Update
            <TextView
                android:id="@+id/tvSkipSms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_medium"
                android:text="@string/sms_skip_option"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/text_secondary"
                android:background="?android:attr/selectableItemBackground"
                android:padding="@dimen/spacing_small"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/content_desc_skip_sms"
                app:layout_constraintTop_toBottomOf="@id/btnSendSms"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" /> -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Back Button (alternative to toolbar navigation) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="@dimen/back_button_size"
        android:layout_height="@dimen/back_button_size"
        android:layout_margin="@dimen/spacing_medium"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/content_desc_back_button"
        android:src="@drawable/ic_arrow_back_24"
        android:visibility="gone"
        app:tint="@color/shark_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>